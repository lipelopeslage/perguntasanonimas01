%>

<p class="alert alert-warning">Esta pergunta ainda n√£o possui respostas.</p>

<%	}else{%>

	<ul class="list-group">
		<%
		answers.map(function(a){
		%>
			<li class="list-group-item clearfix" data-type="answer">
				<div class="col-md-11">
					<strong style="font-size: 20px;line-height: 30px;"><%=a.answer%></strong><br>
